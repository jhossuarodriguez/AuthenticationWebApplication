@model AuthenticationWebApplication.Models.RegisterViewModel

<div class="">
    <p class="text-muted mb-0">Registrate para continuar</p>
    <form class="mt-3" asp-action="Register" method="post">
        <div class="mb-3">
            <label asp-for="Username" class="form-label">Usuario</label>
            <input asp-for="Username" placeholder="Ingrese su usuario" autofocus required class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label">Contraseña</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Ingrese su contraseña" pattern="^(?=.*[A-Za-z])(?=.*\d)[A-Za-z\d$!%*#?&]{6,}$" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="FirstName" class="form-label">Nombre</label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName"></span>
        </div>

        <div class="mb-3">
            <label asp-for="LastName" class="form-label">Apellido</label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email"></span>
        </div>
        <button class="btn btn-primary w-100" type="submit">Registrar</button>
    </form>
</div>
